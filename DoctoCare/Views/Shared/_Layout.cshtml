<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoctoCare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoctoCare.styles.css" asp-append-version="true" />
    <link href="~/css/Head.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="navbar navbar-expand-lg navbar-light bg-primary fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">DoctoCare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Services</a>
                        </li>
                    </ul>
                    <div class="d-flex justify-content-center align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item py-md-2">
                               <form class="d-flex flex-grow-1 mx-5">
                                   <input class="form-control me-2" type="search" placeholder="Nom, spécialité, établissement..." aria-label="Search">
                                   <input class="form-control me-2" type="where" placeholder="Où ?" aria-label="where">
                                    <button class="btn btn-outline-light me-2" type="submit" style="background-color:grey">Rechercher</button>
                               </form>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-collapse collapse" id="navbarNav">
                        <!-- Existing navbar content -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" style=" background-color:white" href="/login">Vous êtes médecin ?</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-collapse collapse" id="navbarNav">
                        <!-- Existing navbar content -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" style=" background-color:white" href="/login">Se connecter</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light" style="background-color:white"href="/appointments">Gérer mes RDV</a>
                            </li>
                        </ul>
                    </div>
                    <!--<partial name="_LoginPartial" />-->
                </div>
            </div>
        </div>
    </header>
    <img src="~/Ressources/Medicale.jpg" alt="Descriptive Image Text" class="custom-image" width="1750" height="700" />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DoctoCare - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
